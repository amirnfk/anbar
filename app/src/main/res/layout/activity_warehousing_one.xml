<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.WarehousingOneActivity"
    android:orientation="vertical"
    android:padding="0dp"
    android:layoutDirection="ltr">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/tvStartWarehousing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text = "شروع شمارش انبارگرداني جديد"
            android:textColor="@color/Black"
            android:onClick="onStartWarehousing"/>
        <TextView
            android:id="@+id/tvContinueWarehousing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text = "ادامه انبارگرداني قبلي"
            android:textColor="@color/Black"
            android:onClick="onContinueWarehousing"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "خروج"
        android:textColor="@color/Gray"
        android:onClick="onExitClick"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>