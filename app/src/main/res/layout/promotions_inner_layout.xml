<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_promotion_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_promotion_product"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_shopping_basket_24" />

            <TextView
                android:id="@+id/txt_promotion_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:text="کد کالا"
                android:textColor="@color/Black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_promotion_name"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="چای کیسه ای گلستان"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_promotion_todate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/iransansregular"
                android:gravity="center"
                android:text="اعتبار"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.2" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="0.6"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_off_percent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:fontFamily="@font/iransansregular"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=" 13 % تخفیف"
                            android:textColor="@color/Black"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/HaftOrange"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_price_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:fontFamily="@font/yekan"
                                android:gravity="center"
                                android:rotation="90"
                                android:text="ریال"
                                android:textColor="@color/White" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:background="@color/HaftOrange"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_promotion_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:fontFamily="@font/iransansregular"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="12000"
                                    android:textColor="@color/White"
                                    android:textSize="14sp" />

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginStart="3dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@color/White" />

                                <TextView
                                    android:id="@+id/txt_promotion_off_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:fontFamily="@font/iransansregular"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="10000"
                                    android:textColor="@color/White"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/view5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.2" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>