<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layoutDirection="ltr"
    tools:openDrawer="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout

            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".Activity.Activity.PromotionsListActivity">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/HaftOrange">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collaps1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:theme="@style/Theme.MaterialComponents"
                    app:collapsedTitleTextColor="@color/White"
                    app:contentScrim="@color/colorPrimary"
                    app:expandedTitleTextColor="#00F04F23"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlways">

                    <ImageView
                        android:id="@+id/img_top_header"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@color/White"

                        android:scaleType="fitXY"
                        android:src="@drawable/back_header"
                        android:textDirection="rtl" />


                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar1"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:background="@color/HaftOrangeLight"
                        android:layoutDirection="ltr"
                        app:contentInsetEnd="15dp"
                        app:contentInsetStart="15dp"
                        app:navigationContentDescription="@string/abc_action_bar_up_description"
                        app:title="تخفیفات ویژه">

                        <SearchView
                            android:id="@+id/search"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:alwaysDrawnWithCache="true"
                            android:animateLayoutChanges="true"
                            android:animationCache="true"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:queryHint="جستجو با نام کالا و کد کالا" />

                    </androidx.appcompat.widget.Toolbar>

                    <ImageButton
                        android:id="@+id/img_header_inlarger"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="5dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/White"
                        app:srcCompat="@drawable/baseline_zoom_out_map_24" />


                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedscrrol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1E3F51B5"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_promotion_list"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginTop="75dp"
                android:descendantFocusability="blocksDescendants"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"

                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                app:cardBackgroundColor="#7AFFFFFF"
                app:cardCornerRadius="16dp"
                app:layout_anchor="@id/appBar"
                app:layout_anchorGravity="bottom|center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7AFFFFFF"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/logo_haft_vector" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_promotion_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/HaftOrange"
                            android:fontFamily="@font/iransansbold"
                            android:gravity="center"
                            android:text="تخفیفات ویژه"
                            android:textColor="@color/White"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt_promotion_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/HaftOrange"
                            android:fontFamily="@font/iransansbold"
                            android:gravity="center"
                            android:text="یکشنبه 11 دی الی  سه شنبه 13 دی"
                            android:textColor="@color/White"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_promotion_list_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/HaftOrange"
                        android:fontFamily="@font/iransansbold"
                        android:gravity="center"
                        android:text=" کالای تخفیفی"
                        android:textColor="@color/White" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <ProgressBar
            android:id="@+id/prg_promotion_list"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#FFFFFF"
        android:fitsSystemWindows="false"
        android:layoutDirection="rtl"
        android:textDirection="rtl">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="مرتب سازی"

                        android:textColor="@color/HaftOrange"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/iransansbold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/imgfilter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:tint="@color/HaftOrange"
                        app:srcCompat="@drawable/sort" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rd_group_sort"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <RadioButton
                            android:id="@+id/rd_btn_highest_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="بالاترین درصد تخفیف"
                            android:textStyle="normal" />

                        <RadioButton
                            android:id="@+id/rd_btn_lowest_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="پایین ترین درصد تخفیف" />

                        <RadioButton
                            android:id="@+id/rd_btn_highest_price_before_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="بیشترین قیمت پیش از تخفیف" />

                        <RadioButton
                            android:id="@+id/rd_btn_lowest_price_before_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="کمترین قیمت پیش از تخفیف" />

                        <RadioButton
                            android:id="@+id/rd_btn_highest_price_after_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="بیشترین قیمت پس از تخفیف" />

                        <RadioButton
                            android:id="@+id/rd_btn_lowest_price_after_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="کمترین قیمت پس از تخفیف" />
                    </RadioGroup>


                </LinearLayout>


                <View
                    android:id="@+id/view13"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="8dp"
                    android:background="@color/White" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/actionBarSize"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:text="فیلتر پروموشن ها"

                            android:textColor="@color/HaftOrange"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/iransansbold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:tint="@color/HaftOrange"
                            android:visibility="gone"
                            app:srcCompat="@drawable/filter_search" />


                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rd_group_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/White"
                        android:padding="5dp">

                        <RadioButton
                            android:id="@+id/rd_btn_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="همه" />

                        <RadioButton
                            android:id="@+id/rd_btn_started_today"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text=" امروز شروع می شوند" />

                        <RadioButton
                            android:id="@+id/rd_btn_expired_today"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="امروز منقضی می شوند " />

                        <RadioButton
                            android:id="@+id/rd_btn_expired_yesterday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="دیروز منقضی شده اند"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <View
                            android:id="@+id/view7"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_margin="5dp"
                            android:background="@color/Gray4" />

                        <RadioButton
                            android:id="@+id/rd_btn_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="براساس تاریخ شروع"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rd_btn_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/iransansregular"
                            android:text="براساس تاریخ اتمام"
                            android:textSize="14sp" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="76dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/lyt_from_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_from_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:editable="true"
                                android:fontFamily="@font/iransansregular"
                                android:hint="از تاریخ"
                                android:textColor="@color/Black"
                                android:textIsSelectable="false"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/img_from_date_clear"
                                android:layout_width="@dimen/StoreListViewButtonSize"
                                android:layout_height="@dimen/StoreListViewButtonSize"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/spacing_middle"
                                app:srcCompat="@drawable/filter_remove"
                                app:tint="@color/red_500" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyt_to_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txt_to_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_large"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:editable="true"
                                android:fontFamily="@font/iransansregular"
                                android:hint="تا تاریخ"
                                android:textColor="@color/Black"
                                android:textIsSelectable="false"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/img_to_date_clear"
                                android:layout_width="@dimen/StoreInsertButtonSize"
                                android:layout_height="@dimen/StoreListViewButtonSize"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/spacing_middle"
                                app:srcCompat="@drawable/filter_remove"
                                app:tint="@color/red_500" />

                        </LinearLayout>

                        <View
                            android:id="@+id/view6"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_margin="8dp"
                            android:background="@color/White" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/btn_apply_promotion_list"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:background="@color/haft_orange"
            android:fontFamily="@font/iransansbold"
            android:gravity="center"
            android:text="اعمال تغییرات"
            android:textColor="@color/white"
            android:textSize="16sp">


        </TextView>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>