                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:text="وضعيت"
                        android:gravity="center"
                        android:textColor="@color/Black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:text="وضعيت"
                        android:gravity="right"/>
                </LinearLayout>
