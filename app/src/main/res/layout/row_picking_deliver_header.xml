<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="0dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/lyt_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/ListViewPaddingRight">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginTop="1dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransansregular"
                android:gravity="left"
                android:text="تاريخ"
                android:textColor="@color/Gray"></TextView>

            <TextView
                android:id="@+id/tvDocNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/iransansbold"
                android:gravity="right"
                android:text="شماره:"
                android:textColor="@color/Black"
                android:visibility="visible"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginTop="1dp"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackground"
                android:clickable="false"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/list2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/iransansregular"
                    android:gravity="center|right"
                    android:layoutDirection="rtl"
                    android:text="لاین : "
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/iransansregular"
                    android:gravity="center|right"
                    android:layoutDirection="rtl"
                    android:text="کالکتور:"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStoreId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/iransansregular"
                    android:gravity="right"
                    android:text="فروشگاه"
                    android:textColor="@color/Black"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStatusName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/iransansregular"
                        android:gravity="right"
                        android:text="وضعيت"
                        android:textColor="@color/Gray"></TextView>

                    <TextView
                        android:id="@+id/tvStatusName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iransansregular"
                        android:gravity="right"
                        android:text="وضعيت: "
                        android:textColor="@color/Black"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
