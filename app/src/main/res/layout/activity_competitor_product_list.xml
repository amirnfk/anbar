<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.CompetitorProductListActivity"
    android:orientation="vertical"
    android:padding="0dp"
    android:layoutDirection="ltr">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:background="@color/Cyan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">
            <ImageButton
                android:id="@+id/ibMinimize"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="3dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/arrow_up"
                android:minHeight="0dp"
                android:minWidth="0dp"/>
            <TextView
                android:id="@+id/tvMoreParam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بیشتر"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:textColor="@color/Yellow"
                android:paddingRight="0dp"/>
            <TextView
                android:id="@+id/tvStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="فروشگاه"
                android:textColor="@color/Yellow"
                android:background="@color/Cyan1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/WideLineSidePadding"
            android:paddingRight="@dimen/WideLineSidePadding">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/remove"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="@dimen/RemoveImagePadding"
                android:onClick="onRemoveProduct"/>

            <EditText
                style="@style/EditTextStyleNormal1"
                android:layout_width="0dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/etProductName"
                android:maxLength="40"
                android:ellipsize="middle"
                android:layout_weight="75"
                android:hint="قسمتي از نام كالا را وارد كنيد..."
                android:text=""/>
            <TextView
                android:text="عنوان كالا"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="3dp"
                android:layout_weight="25"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lParamValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/WideLineSidePadding"
                android:paddingRight="@dimen/WideLineSidePadding"
                android:layout_marginTop="5dp">
                <fragment
                    android:id="@+id/frDateFrom"
                    android:name="com.oshanak.mobilemarket.Activity.Common.DateFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_date" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/WideLineSidePadding"
                android:paddingRight="@dimen/WideLineSidePadding"
                android:layout_marginTop="10dp">
                <fragment
                    android:id="@+id/frDateTo"
                    android:name="com.oshanak.mobilemarket.Activity.Common.DateFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_date" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="0dp">
        <LinearLayout
            android:background="@color/Cyan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="0dp">
            <TextView
                android:id="@+id/tvCount"
                android:textColor="@color/White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="قيمت هاي ثبت شده"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="@color/White"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview"
            android:clickable="true"
            android:focusable="true"
            android:fadeScrollbars="true"
            android:choiceMode="singleChoice"
            android:padding="@dimen/ListViewPadding"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/ListViewDividerHeight"
            android:background="@color/Gray3"/>
    </LinearLayout>
</LinearLayout>