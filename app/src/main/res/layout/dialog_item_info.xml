<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layoutDirection="rtl">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/White"
            android:padding="16dp">

            <!-- Info Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvInfo1_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="تاریخ ایجاد:"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/iransansbold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransansbold"
                    android:text="..."
                    android:textColor="@color/Cyan1"
                    android:textDirection="ltr"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Info Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvInfo2_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="کاربر ایجاد کننده:"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/iransansbold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransansbold"
                    android:text="..."
                    android:textColor="@color/Cyan1"
                    android:textDirection="ltr"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Info Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvInfo3_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="تاریخ آخرین تغییر:"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/iransansbold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvInfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransansbold"
                    android:text="..."
                    android:textColor="@color/Cyan1"
                    android:textDirection="ltr"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Info Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvInfo4_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="آخرین تغییر توسط:"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/iransansbold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvInfo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransansbold"
                    android:text="..."
                    android:textColor="@color/Cyan1"
                    android:textDirection="ltr"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Dismiss Button -->
            <Button
                android:id="@+id/btnDismiss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/HaftOrange"
                android:text="بستن"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/iransansbold"
                android:paddingVertical="10dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
