<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Cyan1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/Cyan1"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:fontFamily="@font/iransansbold"
                android:gravity="center|right"
                android:layoutDirection="rtl"
                android:text="جمع آوری سفارش"
                android:textColor="@color/White"
                android:textDirection="rtl"
                android:textSize="18sp" />

            <View
                android:id="@+id/view15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgrefreshdeliverheader"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@drawable/refresh_2"
                android:tint="@color/White" />

            <ImageView
                android:id="@+id/imgbackerdeliverheader"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layoutDirection="ltr"
                android:padding="12dp"
                android:src="@drawable/arrow_left"
                android:tint="@color/White" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:padding="0dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/WideLineSidePadding"
                    android:paddingRight="@dimen/WideLineSidePadding">

                    <fragment
                        android:id="@+id/frDateFrom"
                        android:name="com.oshanak.mobilemarket.Activity.Common.DateFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout="@layout/fragment_date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/WideLineSidePadding"
                    android:paddingRight="@dimen/WideLineSidePadding">

                    <fragment
                        android:id="@+id/frDateTo"
                        android:name="com.oshanak.mobilemarket.Activity.Common.DateFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout="@layout/fragment_date" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/Cyan1"
                android:orientation="horizontal"
                android:visibility="gone">
                <!--            <ImageButton-->
                <!--                android:id="@+id/ibMinimize"-->
                <!--                android:layout_width="30dp"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:adjustViewBounds="true"-->
                <!--                android:background="?selectableItemBackgroundBorderless"-->
                <!--                android:padding="5dp"-->
                <!--                android:scaleType="fitCenter"-->
                <!--                app:srcCompat="@drawable/arrow_up"-->
                <!--                android:minHeight="0dp"-->
                <!--                android:minWidth="0dp"/>-->
                <TextView
                    android:id="@+id/tvStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:background="@color/Cyan1"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:paddingTop="0dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="0dp"
                    android:text="مقادير جستجو"
                    android:textColor="@color/White"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/Cyan1"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/White" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="فهرست سفارش"
                    android:textColor="@color/White" />
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@color/grey_100"
            android:descendantFocusability="blocksDescendants"
            android:divider="@android:color/transparent"

            android:dividerHeight="6dp"
            android:padding="6dp">

        </ListView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/prg_deliver_header_list"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>




