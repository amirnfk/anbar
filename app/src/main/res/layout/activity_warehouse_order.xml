        <ImageButton
            android:id="@+id/bConfirm"
            android:layout_width="@dimen/StoreInsertButtonSize"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/insert1"
            android:layout_marginRight="5dp"
            android:onClick="onInsertClick"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:paddingLeft="0dp"
            android:paddingRight="5dp">

            <Spinner
                style="@style/EditTextStyleNormal1"
                android:layout_width="0dp"

                android:layout_weight="1"
                android:ems="10"
                android:id="@+id/sUnit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="واحد كالا"
                android:gravity="right"
                android:paddingLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:paddingLeft="5dp"
            android:paddingRight="0dp">
            <EditText
                android:id="@+id/etAmount"
                style="@style/EditTextStyleNormal1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLines="2"
                android:maxLength="40"
                android:text=""
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تعداد*"
                android:gravity="right"
                android:paddingLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="0dp">
        <LinearLayout
            android:background="@color/Gray3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="0dp">
            <TextView
                android:id="@+id/tvCount"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اقلام سفارش"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="@color/Black"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview"
            android:clickable="true"
            android:focusable="true"
            android:fadeScrollbars="true"
            android:choiceMode="singleChoice"
            android:padding="@dimen/ListViewPadding"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/ListViewDividerHeight"
            android:background="@color/Gray3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/Gray2">
        <TextView
            android:id="@+id/tvTotalCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="0"
            android:textColor="@color/Black"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/Black"
            android:text = "تعداد كل (CAR) " />
    </LinearLayout>
