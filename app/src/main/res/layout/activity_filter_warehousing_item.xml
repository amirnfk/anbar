<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.FilterWarehousingItemActivity"
    android:background="@color/Gray4"
    android:layoutDirection="ltr">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
    <RadioGroup
        android:id="@+id/rgItemFilter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingRight="10dp">

        <RadioButton
            android:text="كليه اقلام"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rAllItem"
            android:layout_gravity="end"
            android:layoutDirection="rtl"
            android:layout_marginTop="0dp"/>
        <RadioButton
            android:text="فقط اقلام شمارش شده"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rCountedItem"
            android:layout_gravity="end"
            android:layoutDirection="rtl"
            android:layout_marginTop="0dp"/>
        <RadioButton
            android:text="فقط اقلام شمارش نشده"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rNoCountedItem"
            android:layout_gravity="end"
            android:layoutDirection="rtl"
            android:layout_marginTop="0dp"/>

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="10dp">


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="50"
            android:background="@drawable/button_back2"
            android:onClick="onClickExit"
            android:text="خروج"
            android:textColor="@drawable/button_back2" />

<!--        <Button-->
<!--            android:id="@+id/bConfirm"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="1dp"-->
<!--            android:layout_marginRight="1dp"-->
<!--            android:layout_weight="50"-->
<!--            android:background="@drawable/button_back2"-->
<!--            android:onClick="onClickConfirm"-->
<!--            android:text="اصلاح"-->
<!--            android:textColor="@drawable/button_back2" />-->
    </LinearLayout>
    </LinearLayout>
</ScrollView>