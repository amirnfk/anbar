        </TextView>
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="واحد"
            android:textColor="@color/DarkBlue"
            android:padding="0dp">
        </TextView>

    </LinearLayout>
