<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:layoutDirection="ltr">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collaps1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:theme="@style/Theme.MaterialComponents"
            app:contentScrim="@color/Cyan1"
            app:layout_scrollFlags="scroll|enterAlways|exitUntilCollapsed">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/Cyan1"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/Cyan1"
                    android:gravity="center"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/Cyan1"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/fab_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginBottom="32dp"
                            android:background="@color/Cyan1"
                            android:contentDescription="Main FAB"
                            android:gravity="center"
                            android:padding="6dp">

                            <TextView
                                android:id="@+id/txtheader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:fontFamily="@font/iransansbold"
                                android:gravity="center|right"
                                android:text="ناظر جمع آوری"
                                android:textColor="@color/White"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/view18"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/imgRefreshList"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:layout_margin="6dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="6dp"
                                android:src="@drawable/ic_baseline_refresh_24_white" />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.appcompat.widget.Toolbar>

            </LinearLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@color/grey_100"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_100"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:choiceMode="singleChoice"
                android:clickable="true"
                android:divider="@android:color/transparent"
                android:dividerHeight="6dp"
                android:fadeScrollbars="true"
                android:focusable="true"
                android:padding="6dp" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/btn_rounded_orange_white"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/txt_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="0.45"
                android:fontFamily="@font/iransansbold"
                android:gravity="center"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_ta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="0.1"
                android:fontFamily="@font/iransansbold"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_from__date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="0.45"
                android:fontFamily="@font/iransansbold"
                android:gravity="center"
                android:textColor="@color/White"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/WideLineSidePadding"
                    android:paddingRight="@dimen/WideLineSidePadding">

                    <fragment
                        android:id="@+id/frDateFrom"
                        android:name="com.oshanak.mobilemarket.Activity.Common.DateFragment"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        tools:layout="@layout/fragment_date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/WideLineSidePadding"
                    android:paddingRight="@dimen/WideLineSidePadding">

                    <fragment
                        android:id="@+id/frDateTo"
                        android:name="com.oshanak.mobilemarket.Activity.Common.DateFragment"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        tools:layout="@layout/fragment_date" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/WideLineSidePadding"
                android:paddingLeft="@dimen/WideLineSidePadding"
                android:paddingEnd="@dimen/WideLineSidePadding"
                android:paddingRight="@dimen/WideLineSidePadding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <com.oshanak.mobilemarket.Activity.Common.SearchableSpinner
                        android:id="@+id/itemTypeSpinner"
                         android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_style_normal1"
                        android:gravity="center"
                        android:padding="12dp"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        app:fontFamily="@font/iransansbold" />

                    <com.oshanak.mobilemarket.Activity.Common.SearchableSpinner
                        android:id="@+id/shopsListSpinner"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_style_normal1"
                        android:gravity="center"
                        android:padding="12dp"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        app:fontFamily="@font/iransansbold" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransansbold"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/White" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransansbold"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="فهرست سفارش"
                    android:textColor="@color/White" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/Cyan1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibMinimize"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="?selectableItemBackgroundBorderless"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:tint="@color/HaftOrange"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_up_24" />

            <TextView
                android:id="@+id/tvMoreParam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:fontFamily="@font/iransansregular"
                android:gravity="center"
                android:paddingRight="0dp"
                android:text="بیشتر"
                android:textColor="@color/HaftOrange"
                android:visibility="gone" />

            <!--            <TextView-->
            <!--                android:id="@+id/tvStore"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:background="@color/Cyan1"-->
            <!--                android:fontFamily="@font/iransansregular"-->
            <!--                android:gravity="right"-->
            <!--                android:paddingLeft="5dp"-->
            <!--                android:paddingTop="0dp"-->
            <!--                android:paddingRight="5dp"-->
            <!--                android:paddingBottom="0dp"-->
            <!--                android:text="مشخصات سفارش"-->
            <!--                android:textColor="@color/White"-->
            <!--                android:visibility="gone" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lParamValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <View
                    style="@style/Divider2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/Cyan1"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fullscreenProgressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/fullscreenProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/haft_orange" />
    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>