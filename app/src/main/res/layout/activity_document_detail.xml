<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_uploaded_doc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray4"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/new_crd_uploaded_doc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/Gray4"
                            android:padding="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/new_txt_docs_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:fontFamily="@font/iransansregular"
                                android:hint="عنوان سند..." />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_margin="8dp"
                        android:background="@color/Gray4"
                        app:cardBackgroundColor="@color/Gray4"
                        app:cardCornerRadius="8dp">

                        <Spinner
                            android:id="@+id/spinner_doc_type"
                            style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layoutDirection="rtl"
                            android:padding="5dp"
                            android:textDirection="rtl" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/Gray4"
                            android:hint="شرح سند..."
                            android:padding="8dp">

                            <EditText
                                android:id="@+id/new_txt_docs_desc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:ems="10"
                                android:fontFamily="@font/iransansregular"
                                android:gravity="start|top"
                                android:inputType="textMultiLine" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="8dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/new_img_uploaded_doc_1"
                                    android:layout_width="200dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.85"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/receipt_search" />

                                <TextView
                                    android:id="@+id/txt_stat_image_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.15"
                                    android:background="@color/HaftOrange"
                                    android:fontFamily="@font/iransansbold"
                                    android:gravity="center"
                                    android:text="انتخاب تصویر"
                                    android:textColor="@color/White"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/img1_tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="0.2"
                                android:scaleType="fitCenter"
                                android:tint="@color/dribble_green"
                                app:srcCompat="@drawable/checkmark_dis" />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd_image_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/new_img_uploaded_doc_2"
                                    android:layout_width="200dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.85"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/receipt_search" />

                                <TextView
                                    android:id="@+id/txt_stat_image_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.15"
                                    android:background="@color/HaftOrange"
                                    android:fontFamily="@font/iransansbold"
                                    android:gravity="center"
                                    android:text="انتخاب تصویر"
                                    android:textColor="@color/White"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/img2_tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="0.2"
                                android:scaleType="fitCenter"
                                android:tint="@color/dribble_green"
                                app:srcCompat="@drawable/checkmark_dis" />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd_image_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/new_img_uploaded_doc_3"
                                    android:layout_width="200dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.85"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/receipt_search" />

                                <TextView
                                    android:id="@+id/txt_stat_image_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.15"
                                    android:background="@color/HaftOrange"
                                    android:fontFamily="@font/iransansbold"
                                    android:gravity="center"
                                    android:text="انتخاب تصویر"
                                    android:textColor="@color/White"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/img3_tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="0.2"
                                android:scaleType="fitCenter"
                                android:tint="@color/dribble_green"
                                app:srcCompat="@drawable/checkmark_dis" />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd_image_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/new_img_uploaded_doc_4"
                                    android:layout_width="200dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.85"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/receipt_search" />

                                <TextView
                                    android:id="@+id/txt_stat_image_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.15"
                                    android:background="@color/HaftOrange"
                                    android:fontFamily="@font/iransansbold"
                                    android:gravity="center"
                                    android:text="انتخاب تصویر"
                                    android:textColor="@color/White"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/img4_tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="0.2"
                                android:scaleType="fitCenter"
                                android:tint="@color/dribble_green"
                                app:srcCompat="@drawable/checkmark_dis" />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd_image_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/new_img_uploaded_doc_5"
                                    android:layout_width="200dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.85"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/receipt_search" />

                                <TextView
                                    android:id="@+id/txt_stat_image_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.15"
                                    android:background="@color/HaftOrange"
                                    android:fontFamily="@font/iransansbold"
                                    android:gravity="center"
                                    android:text="انتخاب تصویر"
                                    android:textColor="@color/White"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/img5_tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|left"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="0.2"
                                android:scaleType="fitCenter"
                                android:tint="@color/dribble_green"
                                app:srcCompat="@drawable/checkmark_dis" />

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_last_updated_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:fontFamily="@font/iransansbold"
                android:gravity="center"
                android:singleLine="true"
                android:text="..."
                android:textDirection="ltr" />

            <Button
                android:id="@+id/btn_doc_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/HaftOrange"
                android:fontFamily="@font/iransansbold"
                android:text="ویرایش سند"
                android:textColor="@color/White"
                android:textSize="24sp" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/prg_doc_upload"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

</LinearLayout>